<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>Video Visits Member</display-name>

	<listener>
	  <listener-class>
	     net.sourceforge.wurfl.core.web.WURFLServletContextListener
	  </listener-class>
	</listener>
	
	<listener>
		<listener-class>org.kp.tpmg.ttg.webcare.videovisits.member.web.listeners.WebAppContextPropertyListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>wurfl</param-name>
		<param-value>/WEB-INF/lib/wurfl.zip</param-value>
	</context-param>
	
	<filter>
		<filter-name>SSOSessionFilter</filter-name>
		<filter-class>org.kp.tpmg.ttg.webcare.videovisits.member.web.filter.SSOSessionFilter</filter-class>

		<init-param>
			<param-name>excludeURLs</param-name>
			<param-value>ssoPreLogin.json,ssoSubmitLogin.json,submitLogin.json,mobileLogin.json,launchMobileMeetingForMember.json,createSetupWizardMeeting.json,providerRunningLateInfo.json,meetingDetails.json,logVendorMeetingEvents.json,setKPHCConferenceStatus.json,logout.json,isMeetingHashValid.json,caregiverJoinMeeting.json,joinLeaveMeeting.json,loadPropertiesByName.json,*.htm,joinLeaveMobileMeeting.json,logMobileVendorMeetingEvents.json,mobileRunningLateInfo.json,healthMonitor,joinLeaveReactMeeting.json,quitMeeting.json,submitSurvey.json,getActiveSurveys.json,insertVendorMeetingMediaCDR.json,authorizeVVCode.json</param-value>
		</init-param>

	</filter>

	<filter-mapping>
		<filter-name>SSOSessionFilter</filter-name>
		<url-pattern>*.json</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>emailAction</servlet-name>
		<servlet-class>org.kp.tpmg.ttg.webcare.videovisits.member.web.servlet.EmailActionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>emailAction</servlet-name>
		<url-pattern>/emailAction.png</url-pattern>
	</servlet-mapping>

</web-app>
