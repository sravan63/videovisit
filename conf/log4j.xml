<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
	   <param name="file" value="/usr/local/middleware/tcservervv/logs/vvm-webapp.log" />
	   <param name="datePattern" value=".yyyy-MM-dd" />
	   <layout class="org.apache.log4j.PatternLayout">
		<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss,SSS}] %c{3}.%M %5p - %m%n" />
	   </layout>
	</appender>
	
	<logger name="org.kp.tpmg.ttg.webcare.videovisits.member.web">
		<appender-ref ref="file"/>
	</logger>
	
	<logger name="org.kp.tpmg.common.security">
		<appender-ref ref="file"/>
	</logger>

	<root>
		<level value="INFO" />
	</root>

</log4j:configuration>

